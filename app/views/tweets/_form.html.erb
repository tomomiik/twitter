<%= form_for(@tweet,url:choose_new_or_edit) do |f| %>
 <% if @tweet.errors.any? %>
  <div id="error_explanation">
    <h4><%= @tweet.errors.count %>件のエラーがあります。</h4>
    <ul>
    <% @tweet.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
 <% end %>
 
 <%= f.text_field :content,class: 'form-control' %>
 <br>
 <%= f.submit '投稿♡',class: 'btn btn-primary,btn-block' %>
<% end %>
 <br>
<%= link_to "ツイート一覧に戻る", tweets_path %>